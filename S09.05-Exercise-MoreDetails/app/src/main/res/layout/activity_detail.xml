<!-- // Completed  TODO (1) Change the FrameLayout to a vertical LinearLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">


    <!-- // Completed TODO (3) Add a TextView for the selected day's date -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"/>
    <!-- // Completed TODO (4) Add a TextView for the selected day's weather description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_description"/>
    <!-- // Completed TODO (5) Add a TextView for the selected day's high temperature -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_highTemp"/>
    <!-- // Completed TODO (6) Add a TextView for the selected day's low temperature -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_lowTemp"/>
    <!-- // Completed TODO (7) Add a TextView for the selected day's humidity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_humidity"/>
    <!-- // Completed TODO (8) Add a TextView for the selected day's pressure -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pressure"/>
    <!-- // Completed TODO (9) Add a TextView for the selected day's wind -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_wind"/>

</LinearLayout>

